@model CRM.Models.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout="_FormLayout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div id="carousel" class="col-lg-6 d-none d-lg-block carousel slide hero-slides" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li class="active" data-target="#carousel" data-slide-to="0"></li>
                                <li data-target="#carousel" data-slide-to="1"></li>
                                <li data-target="#carousel" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active hero1"></div>
                                <div class="carousel-item  hero2"></div>
                                <div class="carousel-item  hero3"></div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <img src="~/img/Logos/FullLogo.png" alt="image" width="200" height="200" />
                                </div>
                                <p></p>
                                <form class="user" method="POST">
                                    <div class="form-group" asp-controller="Account">
                                        <input asp-for="Email" class="form-control form-control-user" placeholder="Email Address" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>    
                                    <div class="form-group" asp-controller="Account">
                                        <input asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small checkbox">
                                            <input asp-for="RememberMe" class="custom-control-input"/>
                                            <label asp-for="RememberMe" class="custom-control-label"></label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Sign In</button>
                                    <hr>
                                    <div class="form-group text-center">
                                        <label>Not a member yet?</label>
                                        <a class="btn btn-register btn-user btn-block" asp-area=""  asp-controller="Account" asp-action="Register">Register</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}